<%- include('header', {title: `UFO Sighting Record`}); -%>

  <h1>Sightings Record</h1>
  <table class="table table-striped table-sm table-responsive-md">
    <thead>
      <tr class="thead">
        <th scope="col">Report</th>
        <th scope="col">Summary</th>
        <th scope="col" colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <!-- Create an row for each sighting -->
      <% for (let i=0; i < sightings.length; i +=1) {%>
        <tr>
          <th scope="row" class="theader">
            <%= i +1 %>
          </th>
          <td class="tdata">
            <a href="<%= `/sighting/${i + 1}` %>">
              <%= sightings[i].summary %>
            </a>
          </td>
          <td>
            <form action="/sighting/<%= i %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete" />
            </form>
          </td>
          <td><button><a href="/sighting/<%= i+1 %>/edit"> Edit </a></button>
          </td>
        </tr>
        <% }; %>
    </tbody>
  </table>


  <%- include('footer'); -%>