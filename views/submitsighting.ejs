<%- include('header', {title: `Sighting Submission`}); -%>
  <h1> Sighting Submission</h1>
  <div class="container">
    <form action="/sighting" method="POST">
      <div class="col-md-12 mb-3">
        <label for="text" class="form-label">Text</label>
        <textarea class="form-control" name="text" rows="3"></textarea>
      </div>
      <div class="col-md-12 mb-3">
        <label for="date-time" class="form-label">Date & Time</label>
        <input type="datetime-local" class="form-control" name="date_time">
      </div>
      <div class="col-md-12 mb-3">
        <label for="city" class="form-label">City</label>
        <input type="text" class="form-control" name="city" placeholder="Mountain Home">
      </div>
      <div class="col-md-12 mb-3">
        <label for="state" class="form-label">State</label>
        <input type="text" class="form-control" name="state" placeholder="Idaho">
      </div>
      <div class="col-md-12 mb-3">
        <label for="shape" class="form-label">Shape</label>
        <select class="form-control" id="exampleFormControlSelect1">
          <option>Sphere</option>
          <option>Fireball</option>
          <option>Disk</option>
          <option>Circle</option>
          <option>Cigar</option>
          <option>Unknown</option>
        </select>
      </div>
      <div class="col-md-12 mb-3">
        <label for="duration" class="form-label">Duration</label>
        <input type="text" class="form-control" name="duration" placeholder="2 mins">
      </div>
      <div class="col-md-12 mb-3">
        <label for="summary" class="form-label">Summary</label>
        <textarea class="form-control" name="summary" rows="3"></textarea>
      </div>
      <div class="col-md-12">
        <input type="submit" value="Submit">
      </div>
      <br>
      <div class="col-md-12">
        <input type="reset">
      </div>
      <br>
    </form>
  </div>

  <%- include('footer'); -%>